{
  "name": "Sierpinski Triangle (Arrowhead)",
  "axiom": "A",
  "iterations": 8,
  "rules": {
    "A": "B-A-B",
    "B": "A+B+A"
  },
  "turtle": {
    "angle": 60,
    "step": 1.0,
    "start": {
      "x": 0,
      "y": 0,
      "heading": 0
    },
    "commands": {
      "A": {
        "type": "forward",
        "draw": true
      },
      "B": {
        "type": "forward",
        "draw": true
      },
      "+": {
        "type": "turn",
        "direction": 1,
        "angle": 1
      },
      "-": {
        "type": "turn",
        "direction": -1,
        "angle": 1
      }
    }
  },
  "svg": {
    "margin": 0.03,
    "precision": 6,
    "flip_y": true,
    "style": {
      "stroke": "#000",
      "stroke_width": 0.2,
      "fill": "none",
      "stroke_linecap": "round",
      "stroke_linejoin": "round"
    }
  }
}
